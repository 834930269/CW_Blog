@using CW_Blog.Controllers
@using CW_Blog.Models
@{
   Layout = null;
   var us = (User)Session["Current_user"];
}
<p id="location" class="display:none">@us.Location</p>如果地图不显示表示您的地址不在服务区- -...
<div id="allmap" style="height:100vh;"></div>
<script type="text/javascript">
    // 百度地图API功能
    var map = new BMap.Map("allmap");    // 创建Map实例
    map.centerAndZoom($('#location').text(), 11);  // 初始化地图,设置中心点坐标和地图级别
    //添加地图类型控件
    map.addControl(new BMap.MapTypeControl({
        mapTypes: [
            BMAP_NORMAL_MAP,
            BMAP_HYBRID_MAP
        ]
    }));
    map.setCurrentCity($('#location').text());          // 设置地图显示的城市 此项是必须设置的
    map.enableScrollWheelZoom(true);     //开启鼠标滚轮缩放
</script>